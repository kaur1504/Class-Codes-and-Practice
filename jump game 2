class Solution {
    static int minJumps(int[] arr, int n) {
       int jumps=0;
       int destination=arr.length-1;
       int farthest=0;
       int lastidx=0;
       if(arr.length==1){
           return 0;       
       }
       for(int i=0;i<arr.length;i++){
           
           farthest=Math.max(farthest,i+arr[i]);
           if(i==lastidx){
               lastidx=farthest;
               jumps++;
               if(farthest>=destination){
                   return jumps;
               }
       }
       }
       return jumps;
    }
}
     
